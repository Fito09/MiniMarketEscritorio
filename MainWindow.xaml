<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MiniMarket - Panel Principal" Height="500" Width="800">
    <Grid>
        <Button x:Name="btnCerrarSesion" Content="⏏ Cerrar Sesión" Click="btnCerrarSesion_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Style="{StaticResource DefaultButtonStyle}"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="500">
            <TextBlock Text="MiniMarket" FontSize="36" FontWeight="Bold" Foreground="#0078D7" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Button x:Name="btnUsuarios" Content="👤 Usuarios" Click="btnUsuarios_Click" Margin="0,5" Height="40" Style="{StaticResource DefaultButtonStyle}"/>
            <Button x:Name="btnAsistencia" Content="🔑 Asistencia" Click="btnAsistencia_Click" Margin="0,5" Height="40" Style="{StaticResource DefaultButtonStyle}"/>
            <Button x:Name="btnColas" Content="📋 Inventario" Click="btnColas_Click" Margin="0,5" Height="40" Style="{StaticResource DefaultButtonStyle}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Label Content="Tema:" VerticalAlignment="Center"/>
                <ComboBox x:Name="cbTema" Width="120" SelectionChanged="cbTema_SelectionChanged" Margin="5,0,0,0">
                    <ComboBoxItem Content="Claro"/>
                    <ComboBoxItem Content="Oscuro"/>
                    <ComboBoxItem Content="Univalle"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
