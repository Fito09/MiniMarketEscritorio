<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MiniMarket - Panel Principal" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header Superior -->
        <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="20,15" Height="70">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Botón Cerrar Sesión - Esquina Superior Izquierda -->
                <Button x:Name="btnCerrarSesion" Grid.Column="0" Content="⏏ Cerrar Sesión" Click="btnCerrarSesion_Click" 
                        VerticalAlignment="Center" Style="{StaticResource DefaultButtonStyle}" Padding="15,8"/>
                
                <!-- Centro (vacío) -->
                <TextBlock Grid.Column="1"/>
                
                <!-- Usuario y Rol - Esquina Superior Derecha -->
                <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <TextBlock x:Name="txtUsuarioActual" Text="Usuario: Admin" FontWeight="Bold" FontSize="13" Foreground="#333" TextAlignment="Right"/>
                    <TextBlock x:Name="txtRolActual" Text="Rol: Administrador" FontSize="12" Foreground="#666" TextAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Contenido Principal -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="500">
            <TextBlock Text="MiniMarket" FontSize="36" FontWeight="Bold" Foreground="#0078D7" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Button x:Name="btnVenta" Content="💰 Venta de Productos" Click="btnVenta_Click" Margin="0,5" Height="40" Style="{StaticResource DefaultButtonStyle}"/>
            <Button x:Name="btnUsuarios" Content="👤 Usuarios" Click="btnUsuarios_Click" Margin="0,5" Height="40" Style="{StaticResource DefaultButtonStyle}"/>
            <Button x:Name="btnAsistencia" Content="🔑 Asistencia" Click="btnAsistencia_Click" Margin="0,5" Height="40" Style="{StaticResource DefaultButtonStyle}"/>
            <Button x:Name="btnColas" Content="📋 Inventario" Click="btnColas_Click" Margin="0,5" Height="40" Style="{StaticResource DefaultButtonStyle}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Label Content="Tema:" VerticalAlignment="Center"/>
                <ComboBox x:Name="cbTema" Width="120" SelectionChanged="cbTema_SelectionChanged" Margin="5,0,0,0">
                    <ComboBoxItem Content="Claro"/>
                    <ComboBoxItem Content="Oscuro"/>
                    <ComboBoxItem Content="Univalle"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
