<Window x:Class="WpfApp1.Colas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inventario" Height="500" Width="1247" WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MainBackground}">
    <Grid Margin="20">
        <TextBlock Text="Inventario General" FontSize="22" FontWeight="Bold" Foreground="{StaticResource BrushPrimario}" Margin="0,0,0,15"/>
        <StackPanel Orientation="Horizontal" Margin="0,35,0,0" HorizontalAlignment="Right" VerticalAlignment="Top" Height="40">
            <TextBox x:Name="txtBuscarProducto" Width="180" Margin="0,0,5,0" VerticalAlignment="Center"/>
            <Button Content="Buscar" Click="BtnBuscarProducto_Click" Margin="0,0,5,0"/>
            <Button Content="Nuevo" Click="BtnNuevoProducto_Click" Margin="0,0,5,0"/>
            <Button Content="Eliminar" Click="BtnEliminarProducto_Click"/>
        </StackPanel>
        <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Background="White" Padding="8" Margin="0,80,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <DataGrid x:Name="dgInventario" Grid.Row="0" AutoGenerateColumns="True" SelectionChanged="dgInventario_SelectionChanged" Margin="10"/>
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" >
                    <Label Content="Código:"/>
                    <TextBox x:Name="txtCodigo" Width="80" Margin="5"/>
                    <Label Content="Nombre:"/>
                    <TextBox x:Name="txtNombre" Width="120" Margin="5"/>
                    <Label Content="Categoría:"/>
                    <TextBox x:Name="txtCategoria" Width="100" Margin="5"/>
                    <Label Content="Precio:"/>
                    <TextBox x:Name="txtPrecio" Width="70" Margin="5"/>
                    <Label Content="Stock:"/>
                    <TextBox x:Name="txtStock" Width="60" Margin="5"/>
                    <Label Content="Vencimiento:"/>
                    <DatePicker x:Name="dpFechaVencimiento" Width="120" Margin="5"/>
                    <Button x:Name="BtnGuardarProducto" Content="Guardar Cambios" Click="BtnGuardarProducto_Click" Margin="10,0,0,0" Style="{StaticResource DefaultButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
