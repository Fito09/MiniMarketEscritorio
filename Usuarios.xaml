<Window x:Class="WpfApp1.Usuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Usuarios" Height="500" Width="800" WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MainBackground}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Filtros y botones -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="0">
            <TextBox x:Name="txtBuscarUsuario" Width="200" Margin="0,0,10,0"/>
            <Button Click="BtnBuscarUsuario_Click" Style="{StaticResource DefaultButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE721;" Margin="0,0,5,0"/>
                    <TextBlock Text="Buscar"/>
                </StackPanel>
            </Button>
            <Button Click="BtnNuevoUsuario_Click" Style="{StaticResource DefaultButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;" Margin="0,0,5,0"/>
                    <TextBlock Text="Nuevo"/>
                </StackPanel>
            </Button>
            <Button Click="BtnGuardarUsuario_Click" Style="{StaticResource DefaultButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74E;" Margin="0,0,5,0"/>
                    <TextBlock Text="Guardar"/>
                </StackPanel>
            </Button>
            <Button Click="BtnEliminarUsuario_Click" Style="{StaticResource DefaultButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74D;" Margin="0,0,5,0"/>
                    <TextBlock Text="Eliminar"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <!-- Formulario de usuario -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="1">
            <Label Content="Usuario:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtUsuario" Width="120" Margin="5,0"/>
            <Label Content="Contraseña:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <PasswordBox x:Name="txtContrasena" Width="120" Margin="5,0"/>
            <Label Content="Rol:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <ComboBox x:Name="cbRol" Width="120" Margin="5,0">
                <ComboBoxItem Content="Administrador"/>
                <ComboBoxItem Content="Empleado"/>
                <ComboBoxItem Content="Cliente"/>
            </ComboBox>
        </StackPanel>
        <!-- DataGrid -->
        <DataGrid x:Name="dgUsuarios" Grid.Row="2" AutoGenerateColumns="True" IsReadOnly="True" SelectionChanged="dgUsuarios_SelectionChanged"/>
    </Grid>
</Window>
