<Window x:Class="WpfApp1.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inicio de Sesión" Height="600" Width="450" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" AllowsTransparency="True" WindowStyle="None">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#232B36" Offset="0"/>
            <GradientStop Color="#1A2028" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Border CornerRadius="12" Background="#232B36" BorderBrush="#333" BorderThickness="1" Padding="40" Margin="0,10,10,10" Effect="{DynamicResource DropShadowEffect}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="354" Height="514">
                <!-- Icono circular -->
                <Ellipse Width="70" Height="70" Fill="#08A1E6" HorizontalAlignment="Center">
                    <Ellipse.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="#222"/>
                    </Ellipse.Effect>
                </Ellipse>
                <!-- Icono de bolsa (Path SVG) -->
                <Canvas Width="32" Height="32" HorizontalAlignment="Center" Margin="-51,-60,0,30">
                    <Path Data="M8,12 L24,12 L24,26 C24,27.1 23.1,28 22,28 L10,28 C8.9,28 8,27.1 8,26 L8,12 Z M12,12 L12,10 C12,7.79 13.79,6 16,6 C18.21,6 20,7.79 20,10 L20,12" Stroke="White" StrokeThickness="2" Fill="Transparent" Canvas.Left="25.6" Canvas.Top="5.2" Height="35" Stretch="Fill" Width="32"/>
                </Canvas>
                <TextBlock Text="Mini Market" FontSize="30" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                <TextBlock Text="Inicia sesión para continuar" FontSize="16" Foreground="#B0BEC5" HorizontalAlignment="Center" Margin="0,0,0,25"/>
                <!-- Card de login -->
                <Border Background="#202833" CornerRadius="10" BorderBrush="#3A4452" BorderThickness="1" Padding="25" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Usuario" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>
                        <Grid Height="38" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="38"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- Icono usuario -->
                            <Viewbox Grid.Column="0" Margin="8,0,0,0" VerticalAlignment="Center" Width="20" Height="20">
                                <Canvas Width="20" Height="20">
                                    <Path Data="M2,18 C2,14 10,14 10,18 M10,10 A4,4 0 1 1 2,10 A4,4 0 1 1 10,10" Stroke="#8AA4B8" StrokeThickness="2" Fill="Transparent"/>
                                </Canvas>
                            </Viewbox>
                            <TextBox x:Name="txtUsuario" Grid.Column="1" Height="38" Background="#232B36" Foreground="White" BorderBrush="#3A4452" BorderThickness="1" FontSize="15" Padding="5,0,0,0" VerticalContentAlignment="Center"/>
                        </Grid>
                        <TextBlock Text="Contraseña" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>
                        <Grid Height="38" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="38"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- Icono candado -->
                            <Viewbox Grid.Column="0" Margin="8,0,0,0" VerticalAlignment="Center" Width="20" Height="20">
                                <Canvas Width="20" Height="20">
                                    <Path Data="M5,10 L15,10 L15,18 L5,18 Z M10,10 L10,6 A3,3 0 0 1 16,6" Stroke="#8AA4B8" StrokeThickness="2" Fill="Transparent"/>
                                </Canvas>
                            </Viewbox>
                            <PasswordBox x:Name="txtPassword" Grid.Column="1" Height="38" Background="#232B36" Foreground="White" BorderBrush="#3A4452" BorderThickness="1" FontSize="15" Padding="5,0,0,0" VerticalContentAlignment="Center"/>
                        </Grid>
                        <Button x:Name="btnIngresar" Height="40" Margin="0,10,0,0" Background="#08A1E6" Foreground="White" FontWeight="Bold" FontSize="16" BorderThickness="0" Cursor="Hand" Click="btnIngresar_Click">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Viewbox Width="22" Height="22" Margin="0,0,8,0">
                                    <Canvas Width="24" Height="24">
                                        <Path Data="M5,12 L19,12 M13,6 L19,12 L13,18" Stroke="White" StrokeThickness="2" Fill="Transparent"/>
                                    </Canvas>
                                </Viewbox>
                                <TextBlock Text="Iniciar Sesión"/>
                            </StackPanel>
                        </Button>
                        
                    </StackPanel>
                </Border>
                <TextBlock Text="Al iniciar sesión, aceptas nuestros términos y condiciones" Foreground="#7B8A99" FontSize="13" HorizontalAlignment="Center" Margin="0,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
